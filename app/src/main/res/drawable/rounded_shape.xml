<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <solid android:color="#F3F3F3" />
    </shape>
</item>

<item
    android:bottom="650dp"
    android:left="-5dp"
    android:right="-5dp"
    android:top="-75dp">

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">

        <gradient
            android:angle="270"
            android:startColor="#990614"
            android:centerColor="#B60214"
            android:endColor="#F13D52"
            android:type="linear" />
    </shape>
</item>
</layer-list>